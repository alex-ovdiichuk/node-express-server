<%- include('../includes/head.ejs') %> <%- include('../includes/navbar.ejs') %>
<main>
  <h1>Cart</h1>
  <div class="cart">
    <% if (cartProducts.length > 0) { %>
    <ul>
      <% cartProducts.forEach(p => { %>
      <li>
        <div>
          <h2><%= p.title %></h2>
          <span>$<%= p.price %> (<%= p.cartItem.quantity %>)</span>
          <a href="/cart/remove/<%= p.id %>" class="product__button">
            Remove From Cart
          </a>
        </div>
      </li>
      <% }) %>
    </ul>
    <a href="/create-order" class="product__button">Checkout</a>
    <% } else { %>No Items<% } %>
  </div>
</main>
<%- include('../includes/end.ejs') %>
