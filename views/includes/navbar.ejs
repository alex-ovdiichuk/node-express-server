<header class="main-header">
  <nav class="main-header__nav">
    <ul class="main-header__list">
      <li class="main-header__list-item<%= path === 'shop' ? ' active' : ''%>">
        <a href="/">Shop</a>
      </li>
      <li
        class="main-header__list-item<%= path === 'products' ? ' active' : ''%>"
      >
        <a href="/products">Products</a>
      </li>
      <% if (isAuth) { %>
      <li class="main-header__list-item<%= path === 'cart' ? ' active' : ''%>">
        <a href="/cart">Cart</a>
      </li>
      <li
        class="main-header__list-item<%= path === 'orders' ? ' active' : ''%>"
      >
        <a href="/orders">Orders</a>
      </li>
      <li
        class="main-header__list-item<%= path === 'admin/add-product' ? ' active' : ''%>"
      >
        <a href="/admin/add-product">Add Product</a>
      </li>
      <li
        class="main-header__list-item<%= path === 'admin/products' ? ' active' : ''%>"
      >
        <a href="/admin/products">Admin Products</a>
      </li>
      <% } %>
    </ul>
    <ul class="main-header__user-nav">
      <% if (!isAuth) { %>
      <li class="main-header__user-nav-item">
        <a href="/login">Login</a>
      </li>
      <li class="main-header__user-nav-item">
        <a href="/signup">Signup</a>
      </li>
      <% } else { %>
      <li class="main-header__user-nav-item">
        <a href="/logout">Logout</a>
      </li>
      <% } %>
    </ul>
  </nav>
</header>
